<?xml version="1.0" encoding="utf-8"?>
<!-- O fragmento tem como raiz qualquer view, nesse caso usou-se o ConstraintLayout -->
<androidx.cardview.widget.CardView
    android:id="@+id/card_news"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    app:cardElevation="10dp"
    app:cardCornerRadius="10dp"
    android:layout_margin="9dp"
    >

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

<TextView
    android:id="@+id/card_news_title"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Campeonato Mundial"
    android:padding="10dp"
    android:textColor="@color/colorPrimaryDark"
    android:textSize="20dp" />

<TextView
    android:id="@+id/card_news_author"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Autor: Ayrton Sousa Marinho"
    android:padding="10dp"
    android:textSize="13dp" />

<TextView
    android:id="@+id/card_news_message"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:textAlignment="viewStart"
    android:textColor="@android:color/black"
    android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat. Duis aute irure dolor in reprehenderit in voluptate velit esse cillum dolore eu fugiat nulla pariatur. Excepteur sint occaecat cupidatat non proident, sunt in culpa qui officia deserunt mollit anim id est laborum."
    android:textSize="17dp"
    android:maxLines="2"
    />

    <Button
        android:id="@+id/card_news_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:textColor="@android:color/white"
        android:text="Detalhes" />


</LinearLayout>


</androidx.cardview.widget.CardView>
